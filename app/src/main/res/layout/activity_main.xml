<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray200">

    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="?attr/colorPrimary"
        android:contentDescription="@string/app_name"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/layoutToolbarBase"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menu"
                style="@style/ClickableCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@mipmap/icon_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@+id/search"
                android:layout_toEndOf="@+id/menu"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/search"
                style="@style/ClickableCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/exit"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:rotation="90"
                android:src="@drawable/icon_search"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/exit"
                style="@style/ClickableCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/app_name"
                android:padding="8dp"
                android:src="@drawable/icon_exit_run"
                android:tint="@color/colorPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/layoutToolbarSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/closeToolbarCity"
                style="@style/ClickableCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/icon_close" />

            <EditText
                android:id="@+id/edtCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:inputType="text"
                android:layout_toStartOf="@+id/btnSearch"
                android:layout_toEndOf="@+id/closeToolbarCity"
                android:hint="@string/activity_main_edt_hint_enter_your_city"
                android:textColorHint="@color/gray600"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                tools:ignore="Autofill" />

            <ImageView
                android:id="@+id/btnSearch"
                style="@style/ClickableCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:rotation="90"
                android:src="@drawable/icon_search"
                android:tint="@color/colorPrimary"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textColor="@color/gray100"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <TextView
            android:id="@+id/textWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iconText"
            android:padding="3dp"
            android:textColor="@color/gray200"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iconText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="6dp"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/i1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/temp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/temp"
                    android:padding="2dp"
                    android:text="@string/txt_celsius"
                    android:textColor="@color/gray700"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="60sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:contentDescription="@string/app_name"
                            android:padding="9dp"
                            android:src="@drawable/icon_speedometer"
                            android:tint="@color/colorPrimary"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/speed"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="center_vertical|end"
                            android:padding="5dp"
                            android:textColor="@color/gray800" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/gray700" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical|start"
                            android:padding="5dp"
                            android:textColor="@color/gray800"
                            tools:ignore="NestedWeights" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:contentDescription="@string/app_name"
                            android:padding="8dp"
                            android:src="@drawable/icon_humidity"
                            android:tint="@color/colorPrimary"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/gray700" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:contentDescription="@string/app_name"
                            android:padding="8dp"
                            android:src="@drawable/icon_sunrise"
                            android:tint="@color/colorPrimary"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/sunrise"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical|end"
                            android:padding="5dp"
                            android:textColor="@color/gray800"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/gray700" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/sunset"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical|start"
                            android:padding="5dp"
                            android:textColor="@color/gray800"
                            tools:ignore="NestedWeights" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:contentDescription="@string/app_name"
                            android:padding="8dp"
                            android:src="@drawable/icon_sunset"
                            android:tint="@color/colorPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardViewWeather"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16sp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_refresh"
        android:tint="@color/colorPrimary"
        app:borderWidth="2dp"
        app:elevation="2dp"
        app:fabSize="normal"
        app:rippleColor="#000" />

</RelativeLayout>