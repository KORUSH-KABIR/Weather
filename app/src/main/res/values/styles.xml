<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="coordinatorLayoutStyle">@style/coordinatorLayoutStyle</item>
        <item name="cardViewStyle">@style/cardViewStyle</item>
    </style>

    <style name="coordinatorLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/gray200</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardViewStyle" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">3dp</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbarStyle" parent="AppTheme">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="noBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Clickable" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/styleRippleWhiteMe</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ClickableWhite" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/styleRippleWhiteMe</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ClickableCircle" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:theme">@style/styleRipplePrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ClickableCircleWhite" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:theme">@style/styleRippleWhiteMe</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleRippleWhite" parent="Theme.AppCompat.NoActionBar"/>

    <style name="styleRippleBlack" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="styleRipplePrimary" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="styleRippleWhiteMe" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="styleRippleBlackMe" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="tabLayoutTextFont" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/exo2_bold</item>
    </style>

</resources>
